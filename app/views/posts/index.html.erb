<div class="page-header">
<h1>投稿一覧</h1>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>投稿日時</th>
      <th>投稿者</th>
      <th>画像</th>
      <th>Title</th>
      <th>Body</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= post.user.nickname %></td>
        <% if post.image? %>
          <td><%= image_tag post.image.url %></td>
        <% else %>
          <td>画像がありません</td>
        <% end %>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body %></td>
        <td><%= render 'posts/tag_list', tag_list: post.interest_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>
</div>

<%= link_to '新規投稿', new_post_path %>
