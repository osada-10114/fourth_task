<style>
 .form h1 {
  text-align: center;
  color: #203744;
 }
 .form .button {
  margin: 20px auto 0;
  display: block;
  width: 250px;
  background-color: #95859c;
  line-height: 44px;
  text-align: center;
  font-size: 22px;
  border-radius: 6px;
  appearance: none;
  border: none;
  color: white;
 }
 .form input[type="email"] {
  width: 100%;
  border-radius: 4px;
  line-height: 32px;
  border: 1px solid #ccc;
  padding: 0 15px;
 }
</style>

<div class="container">
  <div class="form">
    <div class="page-header">
  	   <h1>パスワードの再発行</h1>
    </div>
  	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  		<%= devise_error_messages! %>
  		<p>メールアドレス</p>
  		<%= f.email_field :email, 
  			  placeholder: '8文字以上、半角英数字で入力してください' %>
  		<%= f.submit "パスワードの再発行", class: "button" %>
  	<% end %>
  </div>
</div>
