<style>
  .form h1 {
    text-align: center;
    color: #203744;
  }
  .form .button {
    margin: 20px auto 0;
    display: block;
    width: 250px;
    background-color: #95859c;
    line-height: 44px;
    text-align: center;
    font-size: 22px;
    border-radius: 6px;
    appearance: none;
    border: none;
    color: white;
  }
  .form input[type="text"],
  .form input[type="email"],
  .form input[type="password"] {
    width: 100%;
    border-radius: 4px;
    line-height: 32px;
    border: 1px solid #ccc;
    padding: 0 15px;
  }
</style>

<div class="container">
  <div class="form">
    <div class="page-header">
      <h1>新規会員登録</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p>ニックネーム</p>
      <%= f.text_field :nickname, placeholder: "半角英数字 例) taroutanaka" %>
      <p>メールアドレス</p>
      <%= f.email_field :email, placeholder: "例) tanaka.tarou@email.com" %>
      <p>パスワード</p>
      <%= f.password_field :password, placeholder: '8文字以上、半角英数字で入力してください' %>
      <p>パスワード(再確認)</p>
      <%= f.password_field :password_confirmation, placeholder: '8文字以上、半角英数字で入力してください' %>
      <%= f.submit "会員登録", class: "button" %>
    <% end %>
